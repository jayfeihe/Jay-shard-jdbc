<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jay.mapper.OrderItemMapper">
	<resultMap id="BaseResultMap" type="com.jay.model.OrderItem">
		<id column="item_id" property="itemId" jdbcType="INTEGER" />
		<result column="order_id" property="orderId" jdbcType="INTEGER" />
		<result column="item_num" property="itemNum" jdbcType="INTEGER" />
		<result column="item_price" property="itemPrice" jdbcType="INTEGER" />
		<association property="product" javaType="com.jay.model.Product"
			column="product_id" select="com.jay.mapper.ProductMapper.getProductByProductId" />
	</resultMap>
	<select id="getOrderItemListByOrderId" resultMap="BaseResultMap"
		parameterType="int">
		select item_id, order_id, item_num, item_price, product_id 
		  from t_order_item
		 where order_id=#{orderId}
	</select>
	<insert id="createOrderItem" parameterType="com.jay.model.OrderItem">
		insert into 
	   t_order_item (item_id,   order_id,   item_num,   item_price,   product_id) 
		     values (#{itemId}, #{orderId}, #{itemNum}, #{itemPrice}, #{product.productId})
	</insert>
</mapper>